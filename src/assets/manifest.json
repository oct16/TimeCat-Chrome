{
    "name": "TimeCat Chrome",
    "manifest_version": 2,
    "description": "A Magical Web Recorder",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "timecat-chrome-background.js"
        ],
        "persistent": false
    },
    "permissions": [],
    "browser_action": {
        "name": "~~~~~",
        "default_icon": "record-icon-black.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "timecat-chrome-content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "timecatjs.min.js",
        "timecat-chrome-page.js"
    ]
}
